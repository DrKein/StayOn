<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.drkein.stayon" >

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:name=".tools.BaseApplication"
        android:label="@string/app_name" >
        <activity
            android:name=".act.MainActivity" android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".act.EmptyActivity" android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen"/>

        <receiver android:name=".receiver.PowerConnectionReceiver">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED"/>
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED"/>
            </intent-filter>
        </receiver>
        <service android:name=".service.WakeLockService"/>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="ae10373cfb28e7877904981e97044353216d96d1" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>